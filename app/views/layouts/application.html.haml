!!!
%html
  %head
    %script{:async => "", :src => "https://www.googletagmanager.com/gtag/js?id=UA-108130749-1"}
    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-108130749-1');

    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Ncm'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ncm'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
