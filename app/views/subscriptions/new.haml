.container
  %h1= @epicenter.name
  
  %p
    %strong Medlemmer
    = @epicenter.users_with_tshirt('member').count

  .row
    - if @epicenter.can_accept_members? || @epicenter.has_caretaker?( current_user )
      - for membership in @memberships
        .col-md-4
          .panel.panel-default
            .panel-body
              = render partial: 'form', locals: {membership: membership}
    - else
      .col-md-12
        %p Dette epicenter kan endnu ikke modtage medlemmer