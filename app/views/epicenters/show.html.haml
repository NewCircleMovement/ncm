.jumbotron.epicenter
  .image
    - if @epicenter.image
      = image_tag(@epicenter.image, width: "100%", height: "250")
    .text-wrap
      .text 
        %h1= @epicenter.name
        - if @epicenter.tagline.present?
          %p= @epicenter.tagline

        - if @epicenter.can_accept_members?        
          = link_to "Bliv medlem", new_epicenter_subscription_path( @epicenter ), :class => 'btn btn-lg btn-primary'
        / / - if not @epicenter.status == SEED
        / - unless current_user.present? && current_user.get_membership(@epicenter)
        /   = link_to "Bliv medlem", new_epicenter_subscription_path( @epicenter ), :class => 'btn btn-lg btn-primary'
        / / - else
        / /   Stuff

.container
  .row
    .col-md-8
      - if @left_info
        %h2= @left_info.title
        %p= @left_info.body

      - if @epicenter.video.present?
        .video-wrapper
          = @epicenter.video.html_safe

      - if @right_info
        %h2= @right_info.title
        %p= @right_info.body

    .col-md-4
      - if @epicenter.status == SEED
        .well.bg-ncm-info.space-top-15
          %p
            Støt 
            %strong= @epicenter.name
            med en engangsoverførsel for at tilkendegive din interesse for epicenteret
          %button.btn.btn-primary{"data-target" => "#supportModal", "data-toggle" => "modal", :type => "button"}
            Støt med
            = @epicenter.mother_fruit.name

      %h2 Overblik
      %p 
        Her finder du et overblik over 
        = "#{@epicenter.name}s"
        medlemmer og projekter
      
      %table.table.table-condensed
        %tr
          %td Medlemmer
          %td= @epicenter.members.count
        %tr
          %td Realiserede projekter
          %td= @projects_count
        %tr
          %td Spirer
          %td= @sprouts_count
        %tr
          %td Frø
          %td= @seed_count

      - if @logs.present?
        %h2 Seneste aktivitet
        %table.table.table-condensed
          - for log in @logs
            %tr= log.description

      %h4 
        %strong Caretakers
      - for caretaker in @epicenter.users_with_tshirt("caretaker")
        = caretaker.name

/ Modal
#supportModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    = form_for :support, url: user_support_epicenter_path(current_user, @epicenter) do |form|
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          %h4#myModalLabel.modal-title
            Støt
            = @epicenter.name
        .modal-body
          %p
            = @epicenter.name
            er ikke klar til at modtage medlemmer endnu, men du kan vise din støtte for projektet med 
            en engangsoverførsel af 
            = @epicenter.mother_fruit.name
          %p
            Du har i øjeblikket
            %strong
              = current_user.fruitbasket.fruit_amount(@epicenter.mother_fruit)
              = @epicenter.mother_fruit.name

          .form-group
            = form.number_field :amount, :class => "form-control", :id => "supportInput", :value => 10
            = hidden_field_tag(:epicenter_id, @epicenter.id)

        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Fortryd
          %button.btn.btn-primary{:type => "submit"} Støt nu

:javascript
  $('#supportInput').regexMask(/^\d+$/);
