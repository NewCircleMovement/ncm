  .row
    - if @left_info.present?
      .col-md-4
        %h2= @left_info.title
        %p= @left_info.body
    - if @right_info.present?
      .col-md-4
        %h2= @right_info.title
        %p= @right_info.body

    .col-md-4
      %h2 Activity
      %p A summary of New Circle Movements members and projects
      
      %table.table.table-condensed
        - if @support
          %tr
            %td 
              Support from members 
              %p.timestamp.last-element 
                = @support.body
            %td 
              .stat-number
                - @support.string.chars.map(&:to_i).each do |digit|
                  .stat-number-digit
                    = digit
        - if @paid
          %tr
            %td 
              Paid to projects
              %p.timestamp.last-element 
                = @paid.body
            %td
              .stat-number
                - @paid.string.chars.map(&:to_i).each do |digit|
                  .stat-number-digit
                    = digit
        - if @pool
          %tr
            %td 
              Pool for new projects
              %p.timestamp.last-element 
                = @pool.body
            %td
              .stat-number
                - @pool.string.chars.map(&:to_i).each do |digit|
                  .stat-number-digit
                    = digit


