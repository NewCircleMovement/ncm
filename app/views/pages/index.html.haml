.jumbotron
  .container
    .row
      .col-md-offset-3.col-md-6
        .text-center
          %h1 Vil du ændre verden?
          %p 
            Bak op om gode projekter, eller Lad fællesskabet støtte dig i at gøre din drøm til virkelighed
          - unless user_signed_in?
            = link_to "Bliv medlem", new_user_registration_path, :class => 'btn btn-primary btn-lg'

.container.top

  - if user_signed_in?
    .row
      .col-md-6
        %h1 Opret epicenter
        %p Noget om at oprette
        = link_to "Opret epicenter", new_epicenter_path, :class => 'btn btn-primary btn-lg'
      .col-md-6
        %h1 Støt epicenter
        %p Noget om at støtte
        = link_to "Støt epicenter", epicenters_path, :class => 'btn btn-primary btn-lg'

  - else
    .row
      - for epicenter in @epicenters
        .col-md-4
          .card
            .content
              %h4
                %strong= epicenter.name
              %p
                = epicenter.description
              %p
                = link_to "Læs mere", epicenter, :class => "btn btn-default"
      
