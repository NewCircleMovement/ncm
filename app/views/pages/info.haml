.container.top

  - if user_signed_in?
    .row
      .col-md-6
        %h1 Epicenter info
        - @epicenters.each do |epicenter|
          %h4= epicenter.name
          %ul
            - epicenter.memberships.each do |mship|
              %li
                %strong Name: 
                = "#{mship.name} (#{mship.monthly_fee}.-) "
                %strong Members:
                = "#{mship.users.count}"

          %ul
            - epicenter.fruitbasket.fruitbags.each do |bag|
              %li
                %strong= bag.fruittype.name
                = ": #{bag.amount}"

      .col-md-6
        %h1 User info
        - @users.each do |user|
          %h4= user.name
          %ul
            - user.fruitbasket.fruitbags.each do |bag|
              %li
                %strong= bag.fruittype.name
                = ": #{bag.amount}"



