= render layout: "epicenters/edit_epicenter" do
  %h3.header Informations
  = link_to "Opret ny", new_epicenter_information_path, :class => "btn btn-default"
  
  %table.table.table-condensed
    %thead
      %tr
        %th Titel
        %th Funktioner
    %tbody
      - @information.each do |item|
        - if item
          %tr
            %th= item.title
            %th
              = link_to "Ret", edit_epicenter_information_path(@epicenter, item), class: "btn btn-default"
              = link_to "Slet", [@epicenter, item], :method => :delete, :data => { :confirm => 'Er du sikker' }, class: "btn btn-danger"
          