source 'https://rubygems.org'
ruby '2.2.0'

gem 'rails', '4.2.5.1'

# authentication
gem 'devise'
gem 'stripe'

# haml, sass, coffee, bootstrap, font-awesome
gem 'haml-rails'
gem 'sass-rails', '~> 5.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'bootstrap-sass'
gem 'font-awesome-sass'

#db
gem 'pg'

# better errors
gem "rails_12factor"

#server
gem 'thin'

gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'simple_form'
gem 'high_voltage'

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'better_errors'
  gem 'html2haml'
  gem 'hub', :require=>nil
  gem 'quiet_assets'
  gem 'rails_layout'
  gem 'spring-commands-rspec'
  gem 'annotate'
end

group :development, :test do
  gem 'byebug'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'rspec-rails'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'launchy'
  gem 'selenium-webdriver'
end
